.container
  .pull-right
    form.form-inline
      .form-group
        input.form-control(ng-model="searchText", placeholder="Filter")
      .form-group
        select.form-control(ng-model="searchText")
        //- ng-options="item.value as item.text")
  table.table.table-hover.table-striped.table-condensed
    thead
      tr
        th Title
        th Publish Date
    tbody
      tr(ng-repeat="course in courses | filter: sortOptions | orderBy: sortOrder")
        td {{ course.title }}
        td {{ course.published | date }}
